[Unit]
Description=reel2bits-web
After=network.target

[Service]
Type=simple
User=__APP__
WorkingDirectory=__FINALPATH__
Environment="FLASK_ENV=production"
ExecStart=__FINALPATH__/ve3/bin/waitress-serve --host 0.0.0.0 --port __PORT__ --call 'app:create_app'
TimeoutSec=15
Restart=always

[Install]
WantedBy=multi-user.target
